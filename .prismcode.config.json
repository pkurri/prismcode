{
  "version": "1.0.0",
  "github": {
    "owner": "pkurri",
    "defaultRepo": "",
    "defaultLabels": [
      "feature",
      "bug",
      "enhancement",
      "documentation",
      "epic",
      "story",
      "task"
    ],
    "useProjects": true,
    "projectId": "",
    "customFields": {
      "Priority": ["P0", "P1", "P2", "P3"],
      "Size": ["XS", "S", "M", "L", "XL"],
      "Sprint": "text",
      "Status": ["Backlog", "Todo", "In Progress", "Review", "Done"]
    },
    "labels": {
      "epic": {
        "color": "7C3AED",
        "description": "Strategic initiative spanning multiple sprints"
      },
      "story": {
        "color": "06B6D4",
        "description": "User-facing feature or capability"
      },
      "task": {
        "color": "10B981",
        "description": "Implementation work item"
      },
      "bug": {
        "color": "EF4444",
        "description": "Something isn't working"
      },
      "frontend": {
        "color": "EC4899",
        "description": "Frontend/UI work"
      },
      "backend": {
        "color": "8B5CF6",
        "description": "Backend/API work"
      },
      "database": {
        "color": "F59E0B",
        "description": "Database schema or queries"
      },
      "devops": {
        "color": "6366F1",
        "description": "CI/CD, deployment, infrastructure"
      },
      "documentation": {
        "color": "64748B",
        "description": "Documentation improvements"
      },
      "priority:high": {
        "color": "D73A4A",
        "description": "High priority"
      },
      "priority:medium": {
        "color": "FFA500",
        "description": "Medium priority"
      },
      "priority:low": {
        "color": "90EE90",
        "description": "Low priority"
      }
    }
  },
  "agents": {
    "pm": {
      "storyPointScale": "fibonacci",
      "defaultPriority": "medium",
      "sprintDuration": "2 weeks",
      "velocityTarget": 40
    },
    "architect": {
      "diagramFormat": "mermaid",
      "apiStyle": "rest",
      "includeSequenceDiagrams": true,
      "includeERDiagrams": true
    },
    "coder": {
      "frontend": {
        "defaultFramework": "react",
        "stateManagement": "zustand",
        "uiLibrary": "shadcn"
      },
      "backend": {
        "defaultFramework": "express",
        "orm": "prisma",
        "authStrategy": "jwt"
      },
      "database": {
        "defaultDb": "postgresql",
        "migrationTool": "prisma"
      }
    },
    "qa": {
      "testFramework": "jest",
      "coverageThreshold": 80,
      "e2eFramework": "playwright"
    },
    "devops": {
      "ciProvider": "github-actions",
      "deploymentTarget": "vercel",
      "containerization": "docker"
    }
  },
  "output": {
    "defaultFormat": "both",
    "directory": "output",
    "generateCursorPrompts": true,
    "generateN8nWorkflows": true
  },
  "patterns": {
    "databasePath": "lib/patterns/",
    "requireVerification": true,
    "allowHallucinations": false
  }
}