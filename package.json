  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pkurri/prismcode"
  },
  "bugs": {
    "url": "https://github.com/pkurri/prismcode/issues"
  },
  "homepage": "https://github.com/pkurri/prismcode#readme",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@octokit/graphql": "^7.0.2",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "dotenv": "^16.3.1",
    "yaml": "^2.3.4",
    "zod": "^3.22.4",
    "marked": "^11.0.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
