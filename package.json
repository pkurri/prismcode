{
  "name": "prismcode",
  "version": "0.1.0",
  "description": "AI-powered multi-agent project orchestration platform",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky || true",
    "setup": "node scripts/validate-env.js",
    "validate-env": "node scripts/validate-env.js",
    "clean": "rimraf dist coverage .nyc_output",
    "reset": "npm run clean && rimraf node_modules package-lock.json && npm install",
    "hybrid-setup": "bash scripts/hybrid-setup.sh",
    "create-ide-labels": "node scripts/create-ide-labels.js",
    "import-issues": "node scripts/import-all-issues.js",
    "phase0:setup": "node scripts/execute-parallel.js",
    "phase0:assign": "node scripts/assign-agents.js",
    "phase0:project": "node scripts/setup-phase0-project.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:staged": "lint-staged",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "project-management",
    "automation",
    "github",
    "windsurf",
    "antigravity",
    "multi-agent"
  ],
  "author": "Prasad Kurri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pkurri/prismcode.git"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.10.0",
    "@octokit/rest": "^21.0.0",
    "@sentry/node": "^10.31.0",
    "openai": "^4.20.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@octokit/graphql": "^9.0.3",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}