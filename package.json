{
  "name": "@prismcode/core",
  "version": "1.0.0",
  "description": "AI-powered multi-agent project orchestration platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "prismcode": "./bin/prismcode.js",
    "prism": "./bin/prismcode.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "plan": "node bin/prismcode.js plan",
    "plan:interactive": "node bin/prismcode.js plan --interactive",
    "setup": "node scripts/setup.js",
    "docs": "typedoc --out docs-generated src/"
  },
  "keywords": [
    "ai",
    "agents",
    "project-management",
    "github",
    "automation",
    "orchestration",
    "development",
    "planning",
    "architecture"
