{
  "name": "prismcode",
  "displayName": "PrismCode Multi-Agent Development",
  "description": "AI-powered multi-agent system for automated project planning and GitHub issue generation",
  "version": "0.1.0",
  "publisher": "prismcode",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "prismcode-sidebar",
          "title": "PrismCode",
          "icon": "$(rocket)"
        }
      ]
    },
    "views": {
      "prismcode-sidebar": [
        {
          "type": "webview",
          "id": "prismcode.dashboard",
          "name": "Dashboard"
        }
      ]
    },
    "commands": [
      {
        "command": "prismcode.generatePlan",
        "title": "PrismCode: Generate Project Plan",
        "icon": "$(zap)"
      },
      {
        "command": "prismcode.createIssues",
        "title": "PrismCode: Create GitHub Issues"
      },
      {
        "command": "prismcode.openDashboard",
        "title": "PrismCode: Open Dashboard"
      }
    ],
    "configuration": {
      "title": "PrismCode",
      "properties": {
        "prismcode.github.token": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token"
        },
        "prismcode.github.owner": {
          "type": "string",
          "default": "",
          "description": "GitHub repository owner"
        },
        "prismcode.github.repo": {
          "type": "string",
          "default": "",
          "description": "GitHub repository name"
        }
      }
    },
    "keybindings": [
      {
        "command": "prismcode.generatePlan",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@types/vscode": "^1.107.0",
    "@vscode/test-electron": "^2.3.0",
    "typescript": "^5.9.3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
